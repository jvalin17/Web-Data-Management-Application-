<p id="notice"><%= notice %></p>

<h1>Job Application Manager</h1>

<%= form_tag places_path, :method => 'get' do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search State" %>
  <%= link_to 'Back', places_path %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Position</th>
      <th>Date</th>
      <th>Location</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><%= place.company %></td>
        <td><%= place.position %></td>
        <td><%= place.dt %></td>
        <td><%= place.location %></td>
        <td><%= place.state %></td>
        <td><%= link_to 'Show', place %></td>
        <td><%= link_to 'Edit', edit_place_path(place) %></td>
        <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job Application', new_place_path %>
